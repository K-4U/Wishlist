<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
		"-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
		"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<definition name="mainLayout" template="/WEB-INF/jsp/templates/main-template.jsp">
		<put-attribute name="pageBody" value="/WEB-INF/jsp/templates/empty-content.jsp"/>
		<put-attribute name="activePage" value=""/>
	</definition>

	<definition name="login" template="/WEB-INF/jsp/templates/login-template.jsp"/>


	<definition name="index" extends="mainLayout">
		<put-attribute name="pageBody" value="/WEB-INF/jsp/welcome.jsp"/>
		<put-attribute name="activePage" value="home"/>
	</definition>

	<definition name="lists-own" extends="mainLayout">
		<put-attribute name="pageBody" value="/WEB-INF/jsp/list-overview.jsp"/>
		<put-attribute name="activePage" value="lists-own"/>
	</definition>

	<definition name="lists-own-add" extends="mainLayout">
		<put-attribute name="pageBody" value="/WEB-INF/jsp/add-list.jsp"/>
		<put-attribute name="activePage" value="lists-own-add"/>
	</definition>

	<definition name="list-view" extends="mainLayout">
		<put-attribute name="pageBody" value="/WEB-INF/jsp/list-view.jsp"/>
		<put-attribute name="activePage" value="lists-view"/>
	</definition>

	<definition name="list-add-item" extends="mainLayout">
		<put-attribute name="pageBody" value="/WEB-INF/jsp/list-add-item.jsp"/>
		<put-attribute name="activePage" value="list-add-item"/>
	</definition>

</tiles-definitions>
